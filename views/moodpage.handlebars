    get_emoji("ğŸ˜")
    get_emoji("ğŸ˜”")
    get_emoji("ğŸ˜¡")
    get_emoji("ğŸ˜–")

  </script>
    <div class="mood-options">
        <button class="mood-option"  data-emoji="ğŸ˜„">Happy</button>
        <button class="mood-option" data-emoji="ğŸ˜Š">Content</button>
        <button class="mood-option" data-emoji="ğŸ˜">Neutral</button>
        <button class="mood-option" data-emoji="ğŸ˜”">Sad</button>
        <button class="mood-option"  data-emoji="ğŸ˜¡">Angry</button>
        <button class="mood-option"  data-emoji="ğŸ˜–">Anxious</button>
    </div>

 <button id="toggleBtn">Toggle Menu</button>

  <div id="menu" class="user-menu">
    <h3>User Menu</h3>
   <!-- Log Section -->
    <div class="log-section">
    <h4>Mood Log</h4>
    <ul class="log-list">
      {{#each logEntries}}
        <li class="log-entry">{{this.mood}} - {{this.date}}</li>
      {{/each}}
    </ul>
    </div>
  </div>

<script src="/js/togglemenu.js"></script>
<script src="/js/moodchoice.js"></script>

</body>
</html>

