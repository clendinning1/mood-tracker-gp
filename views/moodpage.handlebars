    <title>mudi - Track your daily mood</title>
    <style>
        /* Style for the mood question/prompt */
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
        .container {
            text-align: center;
        }
        h1 {
            margin-bottom: 20px;
        }
         /* Style for mood option display */
        .mood-options {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-wrap: wrap;
        }
        .mood-option {
            margin: 10px;
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }
        .mood-option:hover {
            background-color: #0056b3;
        }
         /* Style for the user menu */
         .user-menu {
            position: fixed;
            top: 0;
            left: 0;
            width: 150px;
            height: 100%;
            background-color: #6bb2ff;
            color: #fff;
            padding: 20px;
            overflow-y: auto;
            }

         /* Style for log section */
            .log-section {
            margin-top: 20px;
            }

         /* Style for log entry */
            .log-entry {
            margin-bottom: 10px;
            }
         /* Style for menu toggle button */
            .toggle {
            position: fixed;
            bottom: 20px;
            right: 20px;
            margin: 10px;
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            }
    </style>
</head>
    <body>
    <div class="container">
        <h1>How was your overall mood today?</h1>
 <html>
{{!-- This section below allows handlebars to grab the emojis from the Openmoji library --}}
<script>
    function get_emoji(emoji) {
        let emoji_code = [...emoji].map(e => e.codePointAt(0).toString(16).padStart(4, '0')).join(`-`).toUpperCase()
        if (emoji_code.length === 10) emoji_code = emoji_code.replace("-FE0F", "");
        new_url = `https://openmoji.org/data/color/svg/${emoji_code}.svg`
        document.write(`<img src=${new_url} style="height: 80px;">`);
    }
    get_emoji("üòÑ")
    get_emoji("üòä")
    get_emoji("üòê")
    get_emoji("üòî")
    get_emoji("üò°")
    get_emoji("üòñ")
</script>

</html>
